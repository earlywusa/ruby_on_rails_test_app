<% if @myarticle.errors.any? %>
<h2>The following errors prevented the article from being created</h2>
  <ul>
    <% @myarticle.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
<% end %>
<%= form_for @myarticle do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to "Back to articles", myarticles_path %>
