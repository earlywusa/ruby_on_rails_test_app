<h1 align="center">All Users</h1>
<div align="center">
  <%= will_paginate(@users) %>
  <% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(user), myuser_path(user) %></li>
        <li class="article-title">
          <%= link_to user.username, myuser_path(user) %>
        </li>
        <li><small><%= pluralize(user.myarticles.count,"article") if user.myarticles %></small></li>
      </div>
    </div>
  </ul>
  <% end %>
  <%= will_paginate(@users) %>
</div>
